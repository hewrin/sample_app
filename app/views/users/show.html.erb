<% provide(:title, @user.name) %>
<div class = "row">
	<aside class ="col-md-4">
		<section class = "user_info">
			<h1>
	<!-- Gravatar is a free service that allows users to upload images andd associate them with email addresses they control -->
	<!-- gravatar_for is a helper method defined in users_helper -->
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class = "col-md-8">
		<% if @user.microposts.any? %>
			<h3> Micropost (<%= @user.microposts.count %>)</h3>
			<ol class = "microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>